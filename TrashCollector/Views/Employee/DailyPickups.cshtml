@model IEnumerable<TrashCollector.Models.Customer>

@{
    ViewBag.Title = "Daily Pick-Ups";
}

    <h2>Pick-Ups by Day of the Week</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            <p>Day of The Week</p>
            <div class="col-md-10">
                @Html.DropDownList("Day", new SelectList(new string[] { "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday" }))
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Get Pick-Ups" class="btn btn-default bg-primary" />
        </div>
    </div>
}
<table class="table" style="color:aliceblue">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.UserName,"CustomerMap",new { item.Id },new { @class = "linkText" })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
        </tr>
    }

</table>
